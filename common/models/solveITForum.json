{
  "name": "SolveITForum",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "slung": {
      "type": "string",
      "required": true
    },
    "created": {
      "type": "string",
      "required": true
    },
    "private": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "discussionCount": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "description": {
      "type": "string",
      "required": "false",
      "default": "Post discussions that have related topics to this forum."
    }
  },
  "validations": [],
  "relations": {
    "discussions": {
      "type": "hasMany",
      "model": "Solveitdiscussion",
      "foreignKey": "forumId"
    },
    "category": {
      "type": "belongsTo",
      "model": "forumCategory"
    },
    "members": {
      "type": "hasMany",
      "model": "UserAccount",
      "foreignKey": "forumId",
      "through": "forum_member"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "mgt",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "mentor",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "participant",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "mentor",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "*"
    }
  ],
  "methods": {}
}