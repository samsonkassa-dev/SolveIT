{
  "name": "ProgressReport",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "injectOptionsFromRemoteContext": true,
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "object"
    },
    "type": {
      "type": "string",
      "required": true
    },
    "report": {
      "type": "string"
    },
    "createdAt": {
      "type": "date",
      "defaultfun": "now"
    }
  },
  "validations": [],
  "relations": {
    "activity": {
      "type": "belongsTo",
      "model": "activity",
      "foreignKey": "activityId"
    },
    "progressComments": {
      "type": "hasMany",
      "model": "progressComment",
      "foreignKey": "reportId"
    },
    "user": {
      "type": "belongsTo",
      "model": "UserAccount",
      "foriegnKey": "userId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "mentor",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "participant",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
